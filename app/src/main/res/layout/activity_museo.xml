<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/text_primary_black"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_event"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>


        <TextView
            android:id="@+id/event_text"
            android:layout_below="@id/image_event"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"/>


        <TextView
            android:id="@+id/Lugar"
            android:layout_below="@id/event_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14dp"
            android:drawableLeft="@drawable/ic_place_white_24dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/Direccion"
            android:layout_below="@id/Lugar"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textSize="14dp"
            android:drawableLeft="@drawable/ic_navigation_white_24dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/Fecha"
            android:layout_below="@id/Direccion"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="14dp"
            android:drawableLeft="@drawable/ic_event_white_24dp"
            android:padding="10dp"/>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/Fecha"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>


    </RelativeLayout>
</ScrollView>